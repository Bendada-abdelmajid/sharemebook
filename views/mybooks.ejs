<div class="popup center" id="delete-box-cont">
  <div class="delete-box">
    <p> Are you sure you want to delete this book ?</p>
    <div class="center">
      <div class="btn B" onclick="hideDeleteBox()" style="background: #484848;">cancel</div>
      <form method="POST"  id="deleteBook">
        <button typ="submit" class="btn B r">Delete</button>
      </form>
    </div>
  </div>
</div>
<div class="page-head space-b">
  <h2>My Books</h2>
  <form  class="input-box" action="/myBooks">
    <input  class="search-input" name="q"  placeholder="Search your book" />
    <button type="submit" class="input-button" >
      <i class="fas fa-search"></i>
    </button>
  </form>
</div>
<section id="myBooks">
    
    <div class="grid">
      <% books.forEach((book) => {%>
      <div class="book-box" data-book-id="<%= book.id %>">
       
          <div class="book-head flex-e">
            <div id="delete-btn" class="btn r" onclick="showDeleteBox('<%= book.id %>')" title="Delete"><i class="fa fa-trash"></i></div>
          <div id="eidt-btn" class="btn g" data-id="<%= book.id %>" onclick= "showEdit(this)" title="Edite"><i class="fa fa-edit"></i></div>
          </div>
        
        <div class="book-cover">
          <i class="fa fa-expand book-i"></i>
          <img src="<%= book.coverImage %>" />
        </div>
        <div class="content">
          <h3><%= book.title %></h3>
          <p><%= book.auther %></p>
        </div>
      </div>
      <% }) %>
    </div>
</section>
<script src="/js/edit~delete.js"></script>