<div  class="book-box" data-book-id="<%=book._id%>" >
    <div class="book-head space-b">
      <a href="/user/<%=book.user.username%>" class="info center">
        <div class="s-img center">
          <% if(book.user.userImage){ %>
            <img src="<%= book.user.userImage %>" alt="">
            <% } else { %>
              <svg stroke="currentColor" fill="none" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"></path></svg>
            <% } %>
        </div>
        <div class="username">
          <h5><%= book.user.username %></h5>
          <p class="s-p"><%= book.createdAt.toDateString() %></p>
        </div>
    </a>

      <% if(user) { %>
     
        <div class="saveBook" data-action="/user/save/<%= book.id %>">
          <% if(user.saved.includes(book._id)){ %>
            <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M2 2v13.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2z"></path></svg>
          <% } else { %>
            <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5V2zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1H4z"></path></svg>
          <% } %>
          </div>
     
      <% } %>
    </div>

    <div class="book-cover">
      <i class="fa fa-expand book-i"></i>
      <img src="<%= book.coverImage %>" />
    </div>

    <div class="content">
      <h3><%= book.title %></h3>
      <p><%= book.auther %></p>
    </div>
  
  
  </div>